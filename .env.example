 # Security Configuration
KOPIA_REPO_PASSWORD=          # Required, min 16 chars with special characters
KOPIA_SERVER_USERNAME=        # Required, min 8 chars alphanumeric
KOPIA_SERVER_PASSWORD=        # Required, min 16 chars with special characters
KOPIA_SECURE_MODE=false      # Enable TLS encryption (true/false)

# Network Configuration
KOPIA_SERVER_IP=             # Required: Server IP address
KOPIA_SERVER_PORT=51515      # Default Kopia server port

# Path Configuration
KOPIA_BASE_DIR=/var/lib/kopia
KOPIA_REPO_PATH=/repository  # Repository path inside container
KOPIA_CONFIG_DIR=~/.config/kopia
KOPIA_CACHE_DIR=~/.cache/kopia

# NAS Configuration
NAS_IP=                      # Required: NAS IP address
NAS_SHARE=                   # Required: NAS share path
NAS_MOUNT_PATH=/mnt/NAS     # Local mount point for NAS
NAS_MOUNT_OPTIONS="rw,sync,hard,intr,rsize=32768,wsize=32768"
NAS_TIMEOUT=30              # Timeout for NAS mount operations

# Resource Limits
KOPIA_PARALLEL_CLIENT=4      # Number of parallel operations for client
KOPIA_PARALLEL_SERVER=2      # Number of parallel operations for server
KOPIA_CLIENT_CPU_LIMIT=4     # CPU limit for client container
KOPIA_CLIENT_MEM_LIMIT=4G    # Memory limit for client container
KOPIA_SERVER_CPU_LIMIT=2     # CPU limit for server container
KOPIA_SERVER_MEM_LIMIT=2G    # Memory limit for server container

# Backup Configuration
BACKUP_COMPRESSION=zstd-fastest  # Compression algorithm (zstd-fastest, zstd-default, zstd-max)
BACKUP_VERIFY=true              # Verify backups after creation

# Schedule (cron format)
SERVER_SYNC_TIME="0 5 * * *"   # Server sync schedule (default: 5 AM)
CLIENT_BACKUP_TIME="0 2 * * *"  # Client backup schedule (default: 2 AM)

# Logging
LOG_LEVEL=info                 # Logging level (debug, info, warn, error)
LOG_MAX_SIZE=100M              # Maximum log file size
LOG_MAX_FILES=7                # Number of log files to keep

# Volume Configuration (JSON format)
# Example configuration - replace with your paths and settings
DOCKER_VOLUMES='{
    "/path/to/data": {
        "name": "app-data",
        "tags": ["type:data", "app:myapp", "env:prod"],
        "compression": "zstd-fastest",
        "exclude": ["*.tmp", "*.log"]
    },
    "/path/to/config": {
        "name": "app-config",
        "tags": ["type:config", "app:myapp", "env:prod"],
        "compression": "zstd-max",
        "exclude": ["*.bak"]
    }
}'